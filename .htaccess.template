RewriteEngine On

# base url, you also need to change this in config.php!
RewriteBase /

# index.php should be the only php file accessible
RewriteRule ^(.*php)$ index.php [L]

# anything that isn't a file gets redirected to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php?q=$1 [L]
